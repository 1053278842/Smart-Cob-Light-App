                <!-- 色盘 -->

                <!-- 开关按钮 -->
                <com.example.smartcoblight.ColorPickerView
                    android:id="@+id/colorPickerView"
                    android:layout_width="217dp"
                    android:layout_height="214dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.504"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/powerButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/power_button_background_off"
                    android:text="OFF"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/colorPickerView"
                    app:layout_constraintEnd_toEndOf="@id/colorPickerView"
                    app:layout_constraintStart_toStartOf="@id/colorPickerView"
                    app:layout_constraintTop_toTopOf="@id/colorPickerView" />

                <!-- 高级设置按钮 -->
                <Button
                    android:id="@+id/advancedButton"
                    style="@style/AdvancedButtonStyle"
                    android:layout_width="67dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:padding="2dp"
                    android:text="高级设置"
                    android:textColor="@color/slider_thumb"
                    android:textSize="8sp"
                    app:layout_constraintBottom_toBottomOf="@id/colorPickerView"
                    app:layout_constraintEnd_toEndOf="@id/colorPickerView"
                    app:layout_constraintTop_toTopOf="@id/colorPickerView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

